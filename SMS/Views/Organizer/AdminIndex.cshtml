@model IEnumerable<SMS.Models.Organizer>

@{
    ViewData["Title"] = "Index";
    Layout= "../Shared/_AdminPageLayout.cshtml";
}

<h1>Organizer Table</h1>

<p>
    <a asp-action="AdminCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isVerified)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isVerified)
            </td>
            <td>
                @if(item.isVerified){
                    <a asp-controller="Organizer" asp-action="UnverifyOrganizer" asp-route-id="@item.id" class="btn btn-danger">Unverify</a>
                }
                else{
                    <a asp-controller="Organizer" asp-action="VerifyOrganizer" asp-route-id="@item.id" class="btn btn-success">Verify</a>
                }
            </td>
            <td>
                <a asp-action="AdminEdit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="AdminDetails" asp-route-id="@item.id">Details</a> |
                <a asp-action="AdminDelete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
